<%- include('../includes/head.ejs'); %>
</head>
<body>
    <%- include('../includes/navigations.ejs') %>
<main>
    <h1><%= pageTitle %></h1>

    <p>
        <span>
            <% if (author_books.length) { %>
             <p>
                 <strong style="color: red;">
                    Delete the following books before attempting to delete this author.
                 </strong>
             </p>
             <div style='margin-left:20px;margin-top:20px'>
                <h4>Books:</h4>
                <ul>
                    <% author_books.forEach(book => { %>
                        <li>
                            <a href="<%= book.url %>"><%= book.title %> </a>
                            <p><%= book.summary %> </p>
                        </li>             
                    <% }) %>
                </ul>
             </div>
            <% } else { %>
                <p>Do you really want to delete this Author?</p>
                <form action="" method="POST">
                    <div class="form-control">
                        <input type="hidden" required='true' name='authorid' value=<%= author._id %> >
                        <button class="btn" type="submit">Delete</button>
                    </div>
                </form>
            <% } %>
        </span>
    </p>
</main>
    
<%- include('../includes/end.ejs') %> 